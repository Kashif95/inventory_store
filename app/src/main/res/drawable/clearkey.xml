<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/clearColorPress"/>
            <stroke
                android:width="1dp"
                android:color="@color/clearColorPressBorder"/>
            <corners
                android:radius="6dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/clearColor"
                android:startColor="@color/clearColor"/>
            <stroke
                android:width="1dp"
                android:color="@color/clearColorBorder"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
        </shape>
    </item>
</selector>