<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/numberColorPress"/>
            <stroke
                android:width="1dp"
                android:color="@color/numberColorPressBorder"/>
            <corners
                android:radius="6dp"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/numberColor"
                android:startColor="@color/numberColor"/>
            <stroke
                android:width="1dp"
                android:color="@color/numberColorBorder"/>
            <corners
                android:radius="2dp"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
        </shape>
    </item>
</selector>